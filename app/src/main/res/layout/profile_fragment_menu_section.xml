<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16dp">

    <ImageView
        android:id="@+id/imgSavedJob"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_saved_job_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_saved_job"
        android:textColor="@color/text_color"
        android:textSize="15.5sp"
        app:layout_constraintBottom_toBottomOf="@id/imgSavedJob"
        app:layout_constraintEnd_toStartOf="@id/btnSavedJob"
        app:layout_constraintStart_toEndOf="@id/imgSavedJob"
        app:layout_constraintTop_toTopOf="@id/imgSavedJob" />

    <ImageButton
        android:id="@+id/btnSavedJob"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_profile_menu_btn"
        android:src="@drawable/ic_arrow_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgSavedJob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgSavedJob" />

    <ImageView
        android:id="@+id/imgApplicationMenu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:src="@drawable/ic_application_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSavedJob" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_list_application"
        android:textColor="@color/text_color"
        android:textSize="15.5sp"
        app:layout_constraintBottom_toBottomOf="@id/imgApplicationMenu"
        app:layout_constraintEnd_toStartOf="@id/btnApplicationMenu"
        app:layout_constraintStart_toEndOf="@id/imgApplicationMenu"
        app:layout_constraintTop_toTopOf="@id/imgApplicationMenu" />

    <ImageButton
        android:id="@+id/btnApplicationMenu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_profile_menu_btn"
        android:src="@drawable/ic_arrow_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgApplicationMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgApplicationMenu" />

    <ImageView
        android:id="@+id/imgCurriculumVitaeMenu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:src="@drawable/ic_curriculum_vitae_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgApplicationMenu" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_curriculum_vitae"
        android:textColor="@color/text_color"
        android:textSize="15.5sp"
        app:layout_constraintBottom_toBottomOf="@id/imgCurriculumVitaeMenu"
        app:layout_constraintEnd_toStartOf="@id/btnCurriculumVitaeMenu"
        app:layout_constraintStart_toEndOf="@id/imgCurriculumVitaeMenu"
        app:layout_constraintTop_toTopOf="@id/imgCurriculumVitaeMenu" />

    <ImageButton
        android:id="@+id/btnCurriculumVitaeMenu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_profile_menu_btn"
        android:src="@drawable/ic_arrow_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgCurriculumVitaeMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgCurriculumVitaeMenu" />


</androidx.constraintlayout.widget.ConstraintLayout>